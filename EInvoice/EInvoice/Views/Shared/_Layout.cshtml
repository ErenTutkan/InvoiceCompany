<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">
    <link href="https://unpkg.com/@('@')primer/css@('@')^16.0.0/dist/primer.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    @RenderSection("Css", required: false)
</head>
<body>

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">Menu</span>
                    </a>
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <li class="nav-item">
                            <a href="/Home/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Anasayfa</span>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="/CaseTransaction/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-briefcase-fill"></i><span class="ms-1 d-none d-sm-inline">Kasa İşlemleri</span>
                            </a>
                        </li>
                        <li>
                            <a href="#submenu2" data-bs-toggle="collapse" class="nav-link px-0 align-middle ">
                                <i class="fs-4 bi bi-bag-check-fill"></i><span class="ms-1 d-none d-sm-inline">Firmalar</span>
                            </a>
                            <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                                <li class="w-100">
                                    <a href="/Company/Index?comtype=1" class="nav-link px-0"><i class="bi bi-bag-check"></i> <span class="d-none d-sm-inline">Resmi Firmalar</span> </a>
                                </li>
                                <li>
                                    <a href="/Company/Index?comtype=2" class="nav-link px-0">    <i class="bi bi-bag"></i><span class="d-none d-sm-inline">Gayri Resmi Firmalar</span> </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/Product/Index" class="nav-link align-middle px-0">
                                <i class="fs-4 bi-grid"></i> <span class="ms-1 d-none d-sm-inline">Ürünler</span>
                            </a>
                        </li>
                        <li>
                            <a href="/User/Index" class="nav-link px-0 align-middle">
                                <i class="fs-4 bi-people"></i> <span class="ms-1 d-none d-sm-inline">Kullanıcılar</span>
                            </a>
                        </li>
                    </ul>
                    <hr>



                    <a class="link-danger text-center" style="text-decoration:none; font-size:15px !important;" href="/Home/Logout">Çıkış Yap</a>


                </div>
            </div>
            <div class="col overflow-auto h-100">
                <div class="col py-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>







    <!-- Bootstrap Js-->
    <script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/@('@')popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@('@')5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
